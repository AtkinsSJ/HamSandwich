{
	"version": 2,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 19
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/cmake-${presetName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "i686-base",
			"hidden": true,
			"inherits": "base",
			"architecture": {
				"value": "x86",
				"strategy": "external"
			},
			"toolset": {
				"value": "host=x86",
				"strategy": "external"
			}
		},
		{
			"name": "i686-windows-debug",
			"inherits": "i686-base"
		},
		{
			"name": "x86_64-linux-debug",
			"inherits": "base"
		},
		{
			"name": "i686-windows-release",
			"inherits": "i686-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "x86_64-linux-release",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		}
	]
}
